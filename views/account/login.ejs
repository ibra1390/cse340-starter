<% if (title) {%>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<!-- Flash Message -->
<div class="flash-message">
  <%- messages() %>
</div>

<!-- Login Form -->
<form action="/account/login" method="post" class="login-form">
  <div class="form-group">
    <label for="account_email">Email:</label>
    <input 
      type="email" 
      name="account_email" 
      id="account_email" 
      required 
      placeholder="Enter your email"
      value="<%= locals.account_email || '' %>"
    >
  </div>

  <div class="form-group">
    <label for="account_password">Password:</label>
    <div class="password-wrapper">
      <input 
        type="password" 
        name="account_password" 
        id="account_password" 
        required 
        placeholder="Enter your password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{12,}"
      >
      <button type="button" id="toggle-password" class="toggle-password-btn">
        Show Password
      </button>
    </div>
    <div class="password-requirements">
      <p><strong>Password must meet these requirements:</strong></p>
      <ul>
        <li>Minimum 12 characters</li>
        <li>At least 1 uppercase letter</li>
        <li>At least 1 number</li>
        <li>At least 1 special character</li>
      </ul>
    </div>
  </div>
  
    <button type="submit" class="login-button">Login</button>

    <div class="register-link">
        <p>No account? <a href="/account/register">Sign-Up</a></p>
    </div>
</form>
  
<script src="/js/togglePassword.js"></script>