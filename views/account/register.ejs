<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.redirect('/');
} %>

<!-- Flash Messages -->
<% if (errors) { %>
  <ul class="flash-message">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Registration Form -->
<form action="/account/register" method="post" class="auth-form">
  <p class="required-note">*All fields are required.</p>

  <!-- First Name -->
  <div class="form-group">
    <label for="account_firstname">First Name:</label>
    <input 
      type="text" 
      name="account_firstname" 
      id="account_firstname" 
      required 
      placeholder="John" 
      value="<%= locals.account_firstname || '' %>"
    >
  </div>

  <!-- Last Name -->
  <div class="form-group">
    <label for="account_lastname">Last Name:</label>
    <input 
      type="text" 
      name="account_lastname" 
      id="account_lastname" 
      required 
      placeholder="Doe" 
      value="<%= locals.account_lastname || '' %>"
    >
  </div>

  <!-- Email -->
  <div class="form-group">
    <label for="account_email">Email:</label>
    <input 
      type="email" 
      name="account_email" 
      id="account_email" 
      required 
      placeholder="john@example.com" 
      value="<%= locals.account_email || '' %>"
    >
  </div>

  <!-- Password -->
  <div class="form-group">
    <label for="account_password">Password:</label>
    <input 
      type="password" 
      name="account_password" 
      id="account_password" 
      required 
      placeholder="••••••••••••" 
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{12,}"
      title="Must contain: 12+ chars, 1 uppercase, 1 number, 1 special char"
    >
    <button type="button" id="toggle-password" class="toggle-password-btn">Show Password</button>
    <div class="password-hint">
      <strong>Password must:</strong>
      <ul>
        <li>Be 12+ characters</li>
        <li>Include 1 uppercase letter</li>
        <li>Include 1 number</li>
        <li>Include 1 special character</li>
      </ul>
    </div>
  </div>

  <button type="submit" class="auth-button">Register</button>
</form>

<!-- Login Link -->
<div class="auth-link">
  <p>Already have an account? <a href="/account/login">Log in here</a>.</p>
</div>

<!-- Toggle password Script -->
<script src="/js/togglePassword.js"></script>