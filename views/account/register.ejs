<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.redirect('/');
} %>

<% if (errors) { %>
  <div class="notices">
    <ul>
      <% errors.array().forEach(error => { %>
        <li class="notice"><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/account/register" method="post" class="registration-form">
  <p class="required-notice">*All fields are required.</p>

  <!-- First Name -->
  <div class="form-group">
    <label for="account_firstname">First Name:</label>
    <input 
      type="text" 
      name="account_firstname" 
      id="account_firstname" 
      required 
      value="<%= locals.account_firstname || '' %>"
    >
  </div>

  <!-- Last Name -->
  <div class="form-group">
    <label for="account_lastname">Last Name:</label>
    <input 
      type="text" 
      name="account_lastname" 
      id="account_lastname" 
      required 
      value="<%= locals.account_lastname || '' %>"
    >
  </div>

  <!-- Email -->
  <div class="form-group">
    <label for="account_email">Email:</label>
    <input 
      type="email" 
      name="account_email" 
      id="account_email" 
      required 
      value="<%= locals.account_email || '' %>"
    >
  </div>

  <!-- Password -->
  <div class="form-group">
    <label for="account_password">Password:</label>
    <input 
      type="password" 
      name="account_password" 
      id="account_password" 
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{12,}"
    >
    <button type="button" id="toggle-password" class="toggle-password-btn">
      Show Password 
    </button>
    <div class="password-requirements">
      <p><strong>Password must meet these requirements:</strong></p>
      <ul>
        <li>Minimum 12 characters</li>
        <li>At least 1 uppercase letter</li>
        <li>At least 1 number</li>
        <li>At least 1 special character</li>
      </ul>
    </div>
  </div>

  <button type="submit" class="submit-btn">Register</button>
</form>

<div class="login-link">
  <p>Already have an account? <a href="/account/login">Login</a></p>
</div>

<script src="/js/togglePassword.js"></script>