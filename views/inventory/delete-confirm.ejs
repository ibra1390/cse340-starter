<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
  <div class="notices">
    <ul>
      <% errors.array().forEach(error => { %>
        <li class="notice"><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="registration-form">
  <p class="required-notice">Confirm Deletion - The delete is permanent.</p>
  
  <form action="/inv/delete" method="post">

    <div class="form-group">
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        name="inv_make" 
        id="inv_make" 
        required 
        minlength="3" 
        placeholder="Min of 3 characters"
        readonly
        value="<%= locals.inv_make || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        name="inv_model" 
        id="inv_model" 
        required 
        minlength="3" 
        placeholder="Min of 3 characters"
        readonly
        value="<%= locals.inv_model || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_year">Year</label>
      <input 
        type="text" 
        name="inv_year" 
        id="inv_year" 
        required 
        placeholder="4-digit year"
        minlength="4" 
        maxlength="4"
        pattern="^(19|20)\d{2}$"
        readonly
        value="<%= locals.inv_year || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_price">Price</label>
      <input 
        type="text" 
        name="inv_price" 
        id="inv_price" 
        required 
        placeholder="Decimal or integer numbers only"
        pattern="^[1-9]\d*(\.\d+)?$"
        readonly
        value="<%= locals.inv_price || '' %>"
      >
    </div>

    <button type="submit" class="submit-btn">Delete Vehicle</button>

    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>

</div>
