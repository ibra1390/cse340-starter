<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
  <div class="notices">
    <ul>
      <% errors.array().forEach(error => { %>
        <li class="notice"><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>


<div class="registration-form">
  <p class="required-notice">* Field is required.</p> 
  
  <form action="/inv/add-classification" method="post">
    <div class="form-group">
      <label for="classification_name">Classification Name</label>
      <p class="form-hint">Name must be alphabetic characters only.</p> 
      <input 
        type="text" 
        name="classification_name" 
        id="classification_name" 
        required 
        pattern="[a-zA-Z]+"
        value="<%= locals.classification_name %>"
      >
    </div>
    <button type="submit" class="submit-btn">Add Classification</button>
  </form>
</div>