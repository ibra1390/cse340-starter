<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
  <div class="notices">
    <ul>
      <% errors.array().forEach(error => { %>
        <li class="notice"><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="registration-form">
  <p class="required-notice">* All fields are required.</p>
  
  <form action="/inv/update" method="post">
    <div class="form-group">
      <label for="classificationList">Classification</label>
      <%- classificationSelect %>
    </div>

    <div class="form-group">
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        name="inv_make" 
        id="inv_make" 
        required 
        minlength="3" 
        placeholder="Min of 3 characters"
        value="<%= locals.inv_make || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        name="inv_model" 
        id="inv_model" 
        required 
        minlength="3" 
        placeholder="Min of 3 characters"
        value="<%= locals.inv_model || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_description">Description</label>
      <textarea 
        name="inv_description" 
        id="inv_description" 
        required
      ><%= locals.inv_description || '' %></textarea>
    </div>

    <div class="form-group">
      <label for="inv_image">Image Path</label>
      <input 
        type="text" 
        name="inv_image" 
        id="inv_image" 
        required 
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input 
        type="text" 
        name="inv_thumbnail" 
        id="inv_thumbnail" 
        required 
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image.png' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_price">Price</label>
      <input 
        type="text" 
        name="inv_price" 
        id="inv_price" 
        required 
        placeholder="Decimal or integer numbers only"
        pattern="^[1-9]\d*(\.\d+)?$"
        value="<%= locals.inv_price || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_year">Year</label>
      <input 
        type="text" 
        name="inv_year" 
        id="inv_year" 
        required 
        placeholder="4-digit year"
        minlength="4" 
        maxlength="4"
        pattern="^(19|20)\d{2}$"
        value="<%= locals.inv_year || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_miles">Miles</label>
      <input 
        type="text" 
        name="inv_miles" 
        id="inv_miles" 
        required 
        placeholder="Digits only"
        pattern="^\d+$"
        value="<%= locals.inv_miles || '' %>"
      >
    </div>

    <div class="form-group">
      <label for="inv_color">Color</label>
      <input 
        type="text" 
        name="inv_color" 
        id="inv_color" 
        required
        value="<%= locals.inv_color || '' %>"
      >
    </div>

    <button type="submit" class="submit-btn">Update Vehicle</button>

    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>

</div>
